<%# <div data-controller="reset-grid"> %>
  <div class="grid" data-reset-grid-target="grid">
    <div class="grid-sizer"></div>
    <% artists.each do |artist| %>
      <div data-controller="toggle-card" data-action="click->reset-grid#reset">
        <div class="front-card grid-item" data-action="click->toggle-card#toggle" data-toggle-card-target="card">
          <p data-toggle-card-target="artistName"><%= artist.name %></p>
          <div class="artist-details d-none" data-toggle-card-target="artistDetails">
            <% if artist.manage && artist.recording %>
              <span>MANAGE â€¢ RECORD</span>
            <% elsif artist.manage %>
              <span>MANAGE</span>
            <% else %>
              <span>RECORD</span>
            <% end %>
            <div class="artist-heading">
              <div class="text-highlighted">
                <p><%= artist.name %></p>
                <div class="underline" data-toggle-card-target="underline"></div>
              </div>
              <div class="icons" data-toggle-card-target="icons">
                <% if artist.spotify.length > 0 %>
                  <%= link_to artist.spotify, target: :blank do %>
                    <i class="fab fa-spotify" data-toggle-card-target="spotify"></i>
                  <% end %>
                <% end %>
                <% if artist.instagram.length > 0 %>
                  <%= link_to artist.instagram, target: :blank do %>
                    <i class="fab fa-instagram"></i>
                  <% end %>
                <% end %>
              </div>
            </div>
            <% if artist.quote.length > 0 %>
              <p class="quote" data-toggle-card-target="quote"><%= "\"#{artist.quote}\"" if artist.quote.length > 0 %></p>
              <p class="quoted-by" data-toggle-card-target="quotedBy"><%= artist.quoted_by if artist.quoted_by.length > 0 %></p>
            <% end %>
          </div>
          <%= cl_image_tag artist.photo.key if artist.photo.attached? %>
        </div>
      </div>
    <% end %>
  </div>
<%# </div> %>
