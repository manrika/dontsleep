<div class="page-layout">
  <h1 style="color: rgba(151, 124, 186, 1)">Artists</h1>

  <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">
        <p>All</p>
        <div class="tab-underline"></div>
      </a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">
        <p>Recording</p>
        <div class="tab-underline"></div>
      </a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">
        <p>Managing</p>
        <div class="tab-underline"></div>
      </a>
    </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab"><p>ONE</p></div>
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab"><p>TWO</p></div>
    <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab"><p>THREE</p></div>
  </div>



  <% @artists.each do |artist| %>
    <div>
      <%= artist.name %>
      <%= cl_image_tag artist.photo.key, height: 300, width: 400, crop: :fill if artist.photo.attached? %>
      <%= "MANAGE" if artist.manage %>
      <%= "RECORD" if artist.recording %>
      <% if artist.spotify %>
        <% if artist.spotify.length > 0 %>
          <%= link_to artist.spotify, target: :blank do %>
            <i class="fab fa-spotify"></i>
          <% end %>
        <% end %>
      <% end %>
      <% if artist.instagram %>
        <% if artist.instagram.length > 0 %>
          <%= link_to artist.instagram, target: :blank do %>
            <i class="fab fa-instagram"></i>
          <% end %>
        <% end %>
      <% end %>
      <% if artist.quote %>
        <%= artist.quote if artist.quote.length > 0 %>
        <%= artist.quoted_by if artist.quoted_by.length > 0 %>
      <% end %>
    </div>
  <% end %>
</div>
