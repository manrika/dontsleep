<%= render 'shared/navbar' %>

<h1>Releases</h1>

<%= link_to "New release", editor_releases_new_path %>

<% @releases.each do |release| %>
  <div>
    <%= release.artist_name %>
    <%= release.track_title %>
    <%= link_to "edit", edit_release_path(release) %>
    <%= link_to "delete", delete_release_path(release), method: :delete, data: { confirm: 'Do you really want to delete?' } %>
    <%= cl_image_tag release.photo.key, height: 300, width: 400, crop: :fill if release.photo.attached? %>
  </div>
<% end %>
