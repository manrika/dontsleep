
<div class="page-layout" >
  <h1 style="color: rgba(242, 86, 101, 0.79)">Releases</h1>

  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% counter = 0 %>
      <% @releases.each do |release| %>
        <% if counter == 0 %>
          <% car_item_class = "carousel-item active" %>
          <% counter += 1 %>
        <% else %>
          <% car_item_class = "carousel-item" %>
        <% end %>
        <% color = @colors.sample %>
        <div class="<%= car_item_class %>">
          <div class="release-card" style="border: 4px solid rgba(<%= color %>)">
            <%= cl_image_tag release.photo.key if release.photo.attached? %>
            <div class="release-details">
              <div class="text-highlighted">
                <p><%= release.artist_name %></p>
                <div class="underline" style="background-color: rgba(<%= color %>)"></div>
              </div>
              <div class="text-highlighted">
                <p><%= release.track_title %></p>
                <div class="underline" style="background-color: rgba(<%= color %>)"></div>
              </div>
              <% if release.spotify_link %>
                <% if release.spotify_link.length > 0 %>
                  <%= link_to release.spotify_link, target: :blank do %>
                    <i class="fab fa-spotify" style="color: rgba(<%= color %>)"></i>
                  <% end %>
                <% end %>
              <% end %>
              <%# INSERT apple music icon if statement %>
              <%# INSERT tidal music icon if statement %>
              <%# INSERT amazon music icon if statement %>
              <%= raw release.spotify_embed %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
